@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Courses</h2>

<table id="courses" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Department</th>
            <th>Credits</th>
            <th>Hours</th>
            <th>Semester</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<button type="button" class="btn btn-primary mks-padding" onclick="location.href='@Url.Action("Create", "Courses")'">
    <span class="glyphicon glyphicon-plus"></span> New Course
</button>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#courses").DataTable({
                ajax: {
                    url: "/api/courses",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "code",
                        render: function (code, type, course) {
                            return "<a href='/courses/edit/" + course.id + "'>" + code + "</a>";
                        }
                    },
                    {
                        data: "name"
                    },
                    {
                        data: "department.name"
                    },
                    {
                        data: "credits"
                    },
                    {
                        data: "hours"
                    },
                    {
                        data: "semester"
                    }
                ]
            });
        });
    </script>
}