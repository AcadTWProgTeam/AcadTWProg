@{
    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Departments</h2>

<table id="departments" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<button type="button" class="btn btn-primary mks-padding" onclick="location.href='@Url.Action("Create", "Departments")'">
    <span class="glyphicon glyphicon-plus"></span> New Department
</button>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#departments").DataTable({
                ajax: {
                    url: "/api/departments",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (name, type, department) {
                            return "<a href='/departments/edit/" + department.id + "'>" + name + "</a>";
                        }
                    }
                ]
            });
        });
    </script>
}